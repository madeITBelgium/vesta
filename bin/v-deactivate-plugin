#!/bin/bash
# info: Deactivate plugin
# options: PLUGIN
#
# The function deactivate the plugin to the vestaCP installation


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
plugin=$1

# Includes
source $VESTA/func/main.sh
source $VESTA/conf/vesta.conf

# Additional argument formatting

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#
check_args '1' "$#" 'PLUGIN'
is_format_valid 'plugin'
#is_object_valid 'plugin' 'PLUGIN' "plugin" #Change to is_plugin_not_active


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

line=$(grep "PLUGIN='$plugin'" $VESTA/conf/plugin.conf)
eval $line

if [ "$ACTIVE" == "yes" ]; then
    #Execute plugin install script
    if [ -f "$VESTA/plugin/$PLUGIN/install/uninstall.sh" ]; then
        bash $VESTA/plugin/$PLUGIN/install/uninstall.sh
    fi

    # Deleting old record
    sed -i "/^PLUGIN='$PLUGIN'/d" $VESTA/conf/plugin.conf

    # Generating timestamp
    time_n_date=$(date +'%T %F')
    time=$(echo "$time_n_date" |cut -f 1 -d \ )
    date=$(echo "$time_n_date" |cut -f 2 -d \ )

    # Adding record
    echo "PLUGIN='$PLUGIN' NAME='$NAME' VERSION='$VERSION' BUILDNUMBER='$BUILDNUMBER' LATEST_VERSION='$VERSION' LATEST_BUILDNUMBER='$BUILDNUMBER' KEY='$KEY' ACTIVE='no' TIME='$time' DATE='$date'" >> $VESTA/conf/plugin.conf
    
    #Notify activation
    wget -q https://www.tpweb.org/api/vesta/1.0/plugin/notify/$plugin?type=deactivation > /dev/null
fi

#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Logging
log_history "Deactivate plugin $PLUGIN"
log_event "$OK" "$ARGUMENTS"

exit
